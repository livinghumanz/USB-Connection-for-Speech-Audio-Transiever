<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Layout for left chat-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_chat_view"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#BCCBF6"
        android:padding="8dp"
        android:layout_marginEnd="70dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_chat_text_view"
            android:textColor="@color/black"
            android:textSize="18sp"/>
            <!--android:text="Hello IVI Ramesh Sharma here how the system status and functionality so far..."-->

    </LinearLayout>

    <!--Layout for Right Chat view-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_chat_view"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#BCF6E4"
        android:padding="8dp"
        android:layout_marginStart="70dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_chat_text_view"
        android:textColor="@color/black"
        android:textSize="18sp"/>
        <!--android:text="Hello IVI Ramesh Sharma here how the system status and functionality so far..."-->

    </LinearLayout>

</RelativeLayout>